<div class="container mt-5 mb-5">

    {{#if errorMessage }}
                                    <div class="col-12 col-md-12 col-sm-12 col-lg-12">
                                        <div class="alert alert-danger">
                                            {{ errorMessage }}
                                        </div>
                                    </div>
                                {{/if }}
                                {{#if successMessage }}
                                    <div class="col-12 col-md-12 col-sm-12 col-lg-12">
                                        <div class="alert alert-danger">
                                            {{ successMessage }}
                                        </div>
                                    </div>
                                {{/if }}

                                

            <div class="row d-flex justify-content-center">
{{#each subscription_plans}}
				<div class="col-sm-4 col-md-4 col-lg-4 d-flex justify-content-center">
                    
					<div class="card shadow p-3 mb-5 bg-white rounded">
						<div class="card-body">
							<h5 class="card-title fw-bold text-center mb-5">{{this.planTitle}}</h5>
							<p class="text-center" > {{this.planBrief}}</p>

                            <div class="form-check ">
									<label class="form-check-label mx-5" for="flexRadioDefault2">
										<p >Monthly &nbsp &nbsp- &nbsp &nbsp  ₹ {{this.monthlyRate}}</p>
									</label>
                                    </div>

                                    <div class="form-check ">  
									<label class="form-check-label mx-5" for="flexRadioDefault2">
										<p >Yearly &nbsp &nbsp- &nbsp &nbsp  ₹ {{this.yearlyRate}}</p>
									</label>
                                    </div>
            
                            <div class="text-center">
                            <button type="button" class="btn btn-light" style="width: 150px; border-radius: 15%;">
                                <a href="/a-product/delete-plan/{{this._id}}" class="button  text-success" >Delete Plan</a></button>
                            </div>
                           </div>
						  </div>
                          
					     </div>
                         {{/each}}

                         <div class="text-center">
                            <button type="button" class="btn btn-primary" style="width: 25%; border-radius: 15%;">
                                <a href="/a-product/add-subscription-plans" class="button fw-bold fs-5 text-success">Add New Plan</a></button>
                            </div>


                        </div>
                        
					   </div>
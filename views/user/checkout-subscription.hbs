<form id="btn_checkoutPlan" >
    <section class="breadcrumb-section">
        <h2 class="sr-only">Site Breadcrumb</h2>
        <div class="container ">
            <div class="breadcrumb-contents">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Checkout</li>
                    </ol>
                </nav>
            </div>
        </div>
    </section>
    <main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- Checkout Form s-->
                    <div class="checkout-form">
                        <div class="row row-40">
                            <div class="col-12">
                                <h1 class="quick-title">Checkout</h1>
                                <!-- Slide Down Trigger  -->


                                <div class="checkout-quick-box">
                                    <p><i class="far fa-sticky-note"></i>Have a coupon? <a href="/coupon-view"
                                            class="slide-trigger" data-target="#quick-cupon">
                                            Click here to enter your code</a></p>
                                </div>

                            </div>

                            {{!-- <form id="checkOut-form"> --}}


                                <!-- Billing Address -->

                                <h4 class="checkout-title fw-bold"> Confirm Pay</h4>

                        </div>
                    </div>
                </div>


                {{#if errorMessage }}
                <div class="col-12 col-md-12 col-sm-12 col-lg-12">
                    <div class="alert alert-danger">
                        {{ errorMessage }}
                    </div>
                </div>
                {{/if }}

                {{#if successMessage }}
                <div class="col-12 col-md-12 col-sm-12 col-lg-12">
                    <div class="alert alert-success">
                        {{ successMessage }}
                    </div>
                </div>
                {{/if }}

                <div class="row d-flex justify-content-center mt-5 ">

                    <div class="col-sm-4">
                        <div class="row">
                            <!-- Cart Total -->
                            <div class="col-12">
                                <div class="checkout-cart-total  shadow p-3 mb-5 bg-white rounded">
                                    <h2 class="checkout-title text-center">SUBSCRIBE A PLAN</h2>
                                    <h4>Plan <span>Total</span></h4>
                                    <ul>

                                        <li><span class="left">{{subscription_plan}}</span> <span
                                                class="right">₹{{subscription_rate}}</span></li>

                                    </ul>

                                   <ul>
                                       <li>
                                   <h4>Coupon Code &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                       <input class=" rounded text-danger" value="" id="codeCoupon" 
                                       onchange="couponCode()" type="text" name="coupon"style="width : 50% ">
                                   </h4>
                                       </li>
                                   </ul>

                                    <ul id="ableDisable" style="display: none;">
                                       <li>
                                   <h4 id="discounedAmount">
                                       You Have Saved &nbsp;&nbsp;&nbsp;
                                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                       ₹<span><h1 id="amount" style="color: red; font-weight: bold;"></h1> </span>
                                   </h4>
                                       </li>
                                   </ul> 

                                   <input type="text"  id="rate"  value="{{subscription_rate}}" hidden>

                                    <h4 id="total_head">Grand Total
                                        <span id="finalRate" class="fw-bold">₹{{subscription_rate}}</span></h4>


                                    <div class="form-check ">
                                        <input class="form-check-input " type="radio" name="payment" value="RazorPay"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label mx-5" for="flexRadioDefault2">
                                            Razorpay
                                        </label>
                                    </div>
                                    <div class="form-check ">
                                        <input class="form-check-input " type="radio" name="payment" value="PayPal"
                                            id="flexRadioDefault3"checked>
                                        <label class="form-check-label mx-5" for="flexRadioDefault2">
                                            PayPal
                                        </label>
                                    </div>


                                    <button class="place-order w-100 ">Proceed To Pay</button>


                                    {{!-- <a class=" btn btn-success place-order w-100" href="/">Pick A Book</a> --}}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </form>

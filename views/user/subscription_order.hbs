


<div class="container row d-flex align-items-center justify-content-center mt-5 mb-5"
    style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px; width:50%;">

{{#if errorMessage }}
                                    <div class="m-5 col-12 col-md-12 col-sm-12 col-lg-12">
                                        <div class="alert alert-danger text-center">
                                            {{ errorMessage }}
                                        </div>
                                    </div>
                                {{/if }}

                                {{#if successMessage }}
                                    <div class="m-5 col-12 col-md-12 col-sm-12 col-lg-12">
                                        <div class="alert alert-danger text-center">
                                            {{ successMessage }}
                                        </div>
                                    </div>
                                {{/if }}

<div class="m-5 text-center text-primary fs-1 fw-bold">
    Your Subscribed Plans
</div>



<div class="row container row d-flex align-items-center justify-content-center mt-5 mb-5"
    style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, 
    rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, 
    rgba(0, 0, 0, 0.09) 0px -3px 5px; width:50%;">


<div class="text-center m-5">
<h6 class="fw-bold text-primary">You Have Subscribed</h6>
{{specified_plan.plan}}
</div>

<div class="text-center">
<h6 class="fw-bold text-primary">Subscribed Id </h6>
{{specified_plan._id}}
</div>

<div class="text-center m-5 ">
<h6 class="fw-bold text-primary">Starts From </h6>
{{specified_plan.createdAt}}
</div>

<div class="text-center ">
<h6 class="fw-bold text-primary">Ending At </h6>
{{specified_plan.endingAt}}
</div>

<div class="text-center mt-5">
<h6 class="fw-bold text-primary">Max Allowed Book Count</h6>
{{specified_plan.maxCountBooks}}
</div>

<div class="text-center mt-5">
<h6 class="fw-bold text-primary">Current Rented Book Count</h6>
{{count}}
</div>

<div class="text-center mt-5 mb-5">
<h6 class="fw-bold text-primary">Remaining Allowed Rent Book Count</h6>
{{remainingCount}}
</div>



</div>
</div>

<div class="row container row d-flex align-items-center justify-content-center mt-5 mb-5"
    style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, 
    rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, 
    rgba(0, 0, 0, 0.09) 0px -3px 5px; width:50%;">
    
    {{#each fineAmount}}
    <div>
    <h4>Your Plan Ended On {{this.planEndDate}} . Please Pay Your Fine Amount Rs.{{../fine}} <br>
    And Return The Book As Soon As Possible</h4>
    <h5> Book ID : {{this.bookId}}</h5>
    <h5>Ordered Date : {{this.ordered}}</h5>
    {{!-- <h5>Plan End Date : {{this.fine.planEndDate}}</h5> --}}
        
    </div>
    {{/each}}

    

</div>



<div class="row container row d-flex align-items-center justify-content-center mt-5 mb-5"
    style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, 
    rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, 
    rgba(0, 0, 0, 0.09) 0px -3px 5px; width:50%;">


<table id="example" class="table table-striped table-bordered dt-responsive wrap" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>No</th>
                <th>Date</th>
                <th>Book Name</th>
                <th>Image</th>
                <th>Status</th>
                <th>Return</th>
            </tr>
        </thead>
        <tbody>

            {{#each orders}}
            <tr class="text-center">
                <td scope="row" class="index"></td>
                <td>{{this.date}}</td>
                <td>{{this.book.book_name}}</td>
                <td> <img style="width: 50px; height: 50px;" src="/book-images/{{this.book._id}}1.jpeg" alt=""> </td>
                <td>{{this.status}}</td>

                      {{#if this.book.status}}
      <td>Return Request Accepted</td>
      {{else}}
      <td> <a href="/return-order/{{this.book._id}}/{{this.userOriginalId}}/{{this.status}}" class="btn btn-danger" onclick="return confirm('Data ({{this.book_name}}) will return the book, are you sure ?')" >Return </a> </td>
      {{/if}}
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>







     
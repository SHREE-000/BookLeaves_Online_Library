
<style>
.toool {
  position: relative;
  display: inline-block;
}

.toool .toooltext {
  visibility: hidden;
  width: 140px;
  background-color: #555;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px;
  position: absolute;
  z-index: 1;
  bottom: 150%;
  left: 50%;
  margin-left: -75px;
  opacity: 0;
  transition: opacity 0.3s;
}

.toool .toooltext::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  margin-left: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: #555 transparent transparent transparent;
}

.toool:hover .toooltext {
  visibility: visible;
  opacity: 1;
}
</style>

<div class="container row d-flex align-items-center justify-content-center mt-5 mb-5"
    style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px; width:50%;">

{{#if errorMessage }}
                                    <div class="m-5 col-12 col-md-12 col-sm-12 col-lg-12">
                                        <div class="alert alert-danger text-center">
                                            {{ errorMessage }}
                                        </div>
                                    </div>
                                {{/if }}

                                {{#if successMessage }}
                                    <div class="m-5 col-12 col-md-12 col-sm-12 col-lg-12">
                                        <div class="alert alert-danger text-center">
                                            {{ successMessage }}
                                        </div>
                                    </div>
                                {{/if }}

<div class="m-5 text-center fw-bold">
    <h1>COUPONS</h1>
</div>

{{#each coupon}}
<div class="row container row d-flex align-items-center justify-content-center mt-5 mb-5"
    style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, 
    rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, 
    rgba(0, 0, 0, 0.09) 0px -3px 5px; width:50%;">
<div class="text-center m-5">
<h6 class="fw-bold">Coupon Code</h6>
{{this.coupon_code}}
</div>

<div class="text-center">
<h6 class="fw-bold">Off Percentage </h6>
{{this.off_percentage}}%
</div>

<div class="text-center m-5 ">
<h6 class="fw-bold">validity Till </h6>
{{this.validity}}
</div>

<div class="text-center row mb-5">
    <input class="text-center fw-bold text-danger" type="text" value="{{this.coupon_code}}" id="myInput" style="border-radius: 18%;">

<div class="toool mt-3">
<button class="btn btn-success" onclick="myFunction()" onmouseout="outFunc()" >
  <span class="toooltext " id="mytoool">Copy to clipboard</span>
  Copy Code
  </button>
</div>
</div>

</div>
{{/each}}


</div>










